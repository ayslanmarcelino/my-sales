<div class="text-center">
  <h4><%= t('.registered_clients') %></h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div class="row">
        <div class="col-sm-12">
          <table id="table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t('.first_name')%></th>
                <th><%= t('.last_name')%></th>
                <th><%= t('.nickname')%></th>
                <th><%= t('.document_number')%></th>
                <th><%= t('.email')%></th>
                <th><%= t('.telephone_number')%></th>
                <th class="no-sort table-buttons">
                  <%= link_to new_client_path(@client), class: 'btn btn-success btn-circle' do %>
                    <i class="fas fa-plus"></i>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @clients.each do |client| %>
                <tr>
                  <td><%= client.first_name %></td>
                  <td><%= client.last_name %></td>
                  <td><%= client.nickname %></td>
                  <td><%= format_document_number(client.document_number) %></td>
                  <td><%= client.email %></td>
                  <td><%= client.telephone_number %></td>
                  <td class="table-buttons">
                    <%= link_to edit_client_path(client), class: 'btn btn-info btn-circle' do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to client_path(client),
                        method: :delete,
                        class: 'btn btn-danger btn-circle',
                        data: { confirm: "#{t('.delete_confirm')}: #{client.first_name} #{client.last_name}?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    $('#table').DataTable({
      "columnDefs": [{
        "targets": 'no-sort',
        "orderable": false,
      }],
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Portuguese-Brasil.json"
      }
    });
  });
</script>
