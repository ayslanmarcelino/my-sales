</div>
<div class="col-lg-12">
  <%= form.label(:company_name) %>
  <%= form.text_field(:company_name, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:fantasy_name) %>
  <%= form.text_field(:fantasy_name, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:document_number) %>
  <%= form.number_field(:document_number, class: 'form-control form-control-user', required: true) %>
