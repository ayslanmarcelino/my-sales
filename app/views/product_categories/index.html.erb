<div class="text-center">
  <h4><%= t('.registered_product_categories') %></h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div class="row">
        <div class="col-sm-12">
          <table id="table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t('.description')%></th>
                <th><%= t('.created_at')%></th>
                <th class="no-sort table-buttons">
                  <%= link_to new_product_category_path(@product_category), class: 'btn btn-success btn-circle' do %>
                    <i class="fas fa-plus"></i>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @product_categories.each do |category| %>
                <tr>
                  <td><%= category.description %></td>
                  <td><%= l(category.created_at, format: :with_full_hour) %></td>
                  <td class="table-buttons">
                    <%= link_to edit_product_category_path(category), class: 'btn btn-info btn-circle' do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to product_category_path(category),
                        method: :delete,
                        class: 'btn btn-danger btn-circle',
                        data: { confirm: "#{t('.delete_confirm')}: #{category.description}?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    $('#table').DataTable({
      "columnDefs": [{
        "targets": 'no-sort',
        "orderable": false,
      }],
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Portuguese-Brasil.json"
      }
    });
  });
</script>
